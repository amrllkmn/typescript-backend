{
	"name": "todo-backend",
	"version": "1.0.0",
	"description": "A simple CRUD backend for todo lists, to work on my backend skills",
	"main": "index.js",
	"scripts": {
		"test": "env-cmd --file .env.test jest --runInBand --detectOpenHandles --passWithNoTests",
		"build": "npx tsc",
		"start": "env-cmd --file .env.local node dist/index.js",
		"dev": "concurrently \"npx tsc --watch\" \"env-cmd --file .env.local nodemon -q dist/index.js\"",
		"knex:migrate": "env-cmd --file .env.local npx knex migrate:latest --knexfile ./dist/knexfile.js"
	},
	"author": "Amirul Lokman",
	"license": "ISC",
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^16.0.1",
		"env-cmd": "^10.1.0",
		"express": "^4.18.1",
		"joi": "^17.6.0",
		"knex": "^2.0.0",
		"pg": "^8.7.3",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/node": "^18.0.3",
		"concurrently": "^7.2.2",
		"eslint": "^8.15.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-config-standard": "^17.0.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^6.0.0",
		"jest": "^28.1.0",
		"nodemon": "^2.0.16",
		"prettier": "^2.6.2",
		"typescript": "^4.7.4"
	}
}
